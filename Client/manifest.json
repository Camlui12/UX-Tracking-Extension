{
  "name": "Web Tracer Client",
  "version": "1.3",
  "description": "Software de captura de dados de interacao.",
  "background": {
    "persistent": false,
    "scripts": [ "background.js", "JQuery-3.2.1.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>", "http://*/*", "https://*/*" ],
      "js": [ "JQuery-3.2.1.js", "Content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Obrigado por participar!"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}
