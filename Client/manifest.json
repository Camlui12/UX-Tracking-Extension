{
  "name": "Web Tracer Client",
  "version": "1.3",
  "description": "Software de captura de dados de interacao.",
  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>", "http://*/*", "https://*/*" ],
      "js": ["Content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Obrigado por participar!"
  },
  "permissions": [
    "storage",
    "captureVisibleTab",
    "webNavigation",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}
